<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>com_inventory</name>
    <creationDate>2017-08-29</creationDate>
    <copyright>2017 sugar lead</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <author>sugar lead</author>
    <authorEmail>anjakahuy@gmail.com</authorEmail>
    <authorUrl>http://joomweed.com</authorUrl>
    <version>CVS: 1.0.0</version>
    <description></description>
    
    
    
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <update> <!-- Runs on update -->
        <sql>
            <file driver="mysql" charset="utf8">sql/update.mysql.utf8.sql</file>
        </sql>
    </update>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <filename>index.html</filename>
        <filename>inventory.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>views</folder>
        <folder>models</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
    </files>
    <media destination="com_inventory" folder="media">
        <folder>js</folder>
        <folder>css</folder>
    </media>
    <languages folder="site/languages">
        
			<language tag="en-GB">en-GB/en-GB.com_inventory.ini</language>
    </languages>
    <administration>
        <menu img="media/com_inventory/images/s_com_inventory.png" >COM_INVENTORY</menu>
        <submenu>
            
			<menu link="option=com_inventory&amp;view=vouchers" view="vouchers" img="media/com_inventory/images/s_vouchers.png" alt="Inventory/Vouchers">COM_INVENTORY_TITLE_VOUCHERS</menu>
			<menu link="option=com_inventory&amp;view=codes" view="codes" img="media/com_inventory/images/s_vouchers.png" alt="Inventory/Codes">COM_INVENTORY_TITLE_CODES</menu>
			<menu link="option=com_categories&amp;extension=com_inventory" view="categories" img="media/com_inventory/images/s_vouchers.png" alt="Inventory/Categories">COM_INVENTORY_VOUCHERS_MERCHENT</menu>
			<menu link="option=com_inventory&amp;view=exported" view="exported" img="media/com_inventory/images/s_vouchers.png" alt="Inventory/Codes">COM_INVENTORY_TITLE_EXPORTED</menu>
			

        </submenu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>inventory.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
        <languages folder="administrator/languages">
            
			<language tag="en-GB">en-GB/en-GB.com_inventory.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_inventory.sys.ini</language>
        </languages>
    </administration>
    <config>
        <fields name="params">
            <fieldset name="component">
                <field name="save_history" default="0" />
            </fieldset>
        </fields>
    </config>
    <plugins>
        <plugin group="search" plugin="inventory"/>
    </plugins>
    
</extension>
