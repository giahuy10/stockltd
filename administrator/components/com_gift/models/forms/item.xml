<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="COM_GIFT_FORM_LBL_ITEM_CREATED_BY" description="COM_GIFT_FORM_DESC_ITEM_CREATED_BY" hidden="true" hint="COM_GIFT_FORM_LBL_ITEM_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="COM_GIFT_FORM_LBL_ITEM_MODIFIED_BY" description="COM_GIFT_FORM_DESC_ITEM_MODIFIED_BY" hidden="true" hint="COM_GIFT_FORM_LBL_ITEM_MODIFIED_BY"/>
    <field name="title" filter="safehtml" type="text" label="COM_GIFT_FORM_LBL_ITEM_TITLE" description="COM_GIFT_FORM_DESC_ITEM_TITLE" hint="COM_GIFT_FORM_LBL_ITEM_TITLE"/>
    <field name="sku" filter="safehtml" type="text" label="COM_GIFT_FORM_LBL_ITEM_SKU" description="COM_GIFT_FORM_DESC_ITEM_SKU" hint="COM_GIFT_FORM_LBL_ITEM_SKU"/>
    <field name="manufacturer" extension="com_gift" type="category" label="COM_GIFT_FORM_LBL_ITEM_MANUFACTURER" description="COM_GIFT_FORM_DESC_ITEM_MANUFACTURER" hint="COM_GIFT_FORM_LBL_ITEM_MANUFACTURER"/>
    <field name="quantity" filter="safehtml" type="text" label="COM_GIFT_FORM_LBL_ITEM_QUANTITY" description="COM_GIFT_FORM_DESC_ITEM_QUANTITY" hint="COM_GIFT_FORM_LBL_ITEM_QUANTITY"/>
    <field name="price" type="text" label="COM_GIFT_FORM_LBL_ITEM_PRICE" description="COM_GIFT_FORM_DESC_ITEM_PRICE" hint="COM_GIFT_FORM_LBL_ITEM_PRICE"/>
    <field name="detail" editor="|" filter="JComponentHelper::filterText" type="editor" label="COM_GIFT_FORM_LBL_ITEM_DETAIL" description="COM_GIFT_FORM_DESC_ITEM_DETAIL" hint="COM_GIFT_FORM_LBL_ITEM_DETAIL"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
